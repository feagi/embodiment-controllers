<mujoco model="reacher">
  <compiler angle="radian" inertiafromgeom="true"/>
  
  <default>
    <joint armature="1" damping="1" limited="true"/>
    <geom contype="0" friction="1 0.1 0.1" rgba="0.7 0.7 0 1"/>
  </default>
  
  <option gravity="0 0 -9.81" integrator="RK4" timestep="0.01"/>
  
  <worldbody>
    <!-- Table -->
    <geom name="ground" type="plane" pos="0 0 0" size="1 1 0.1" rgba="0.9 0.9 0.9 1"/>
    
    <!-- Target -->
    <body name="target" pos="0.2 0.2 0.01">
      <geom name="target" type="sphere" size="0.02" rgba="1 0 0 1" contype="0"/>
    </body>
    
    <!-- Arm Base -->
    <body name="body0" pos="0 0 0.01">
      <geom name="link0" type="cylinder" fromto="0 0 0 0 0 0.1" size="0.05" rgba="0 0.6 0.6 1"/>
      
      <!-- Joint 1 -->
      <body name="body1" pos="0 0 0.1">
        <joint name="joint0" type="hinge" pos="0 0 0" axis="0 0 1" range="-3.14 3.14"/>
        <geom name="link1" type="capsule" fromto="0 0 0 0.2 0 0" size="0.02" rgba="0 0.6 0.6 1"/>
        
        <!-- Joint 2 -->
        <body name="body2" pos="0.2 0 0">
          <joint name="joint1" type="hinge" pos="0 0 0" axis="0 0 1" range="-3.14 3.14"/>
          <geom name="link2" type="capsule" fromto="0 0 0 0.2 0 0" size="0.02" rgba="0 0.6 0.6 1"/>
          
          <!-- End Effector -->
          <body name="fingertip" pos="0.2 0 0">
            <geom name="fingertip" type="sphere" size="0.01" rgba="0 0.6 0.6 1"/>
          </body>
        </body>
      </body>
    </body>
  </worldbody>
  
  <actuator>
    <motor joint="joint0" ctrllimited="true" ctrlrange="-1 1" gear="20"/>
    <motor joint="joint1" ctrllimited="true" ctrlrange="-1 1" gear="20"/>
  </actuator>
</mujoco>

